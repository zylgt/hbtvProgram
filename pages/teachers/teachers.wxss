}
.swaperBox{
    width:100%;
    height:100%;
  }

.teacher_img{
    width:100%;
    display: block;
}
.scroll{
    height: 100%;
}

.next_img{
    width:32rpx;
    height:32rpx;
    position: absolute;
    left: 0;
    right:0;
    margin:0 auto;
    bottom:100rpx;
    animation: fadeInUp 2s infinite;
    -webkit-animation: fadeInUp 2s infinite;
  }
  @-webkit-keyframes fadeInUp {
    0% {
      opacity: 0;
      -webkit-transform: translate3d(0, 100%, 0);
      transform: translate3d(0, 100%, 0);
    }
  
    100% {
      opacity: 1;
      -webkit-transform: none;
      transform: none;
    }
  }
  
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      -webkit-transform: translate3d(0, 100%, 0);
      transform: translate3d(0, 100%, 0);
    }
  
    100% {
      opacity: 1;
      -webkit-transform: none;
      transform: none;
    }
  }
