}
::-webkit-scrollbar {
    width: 5rpx;
    height: 13rpx;
    -webkit-border-radius: 5rpx;
    -moz-border-radius: 5rpx;
    border-radius: 5rpx;
  }
  
::-webkit-scrollbar-thumb {
    background-color: #c6a04d;
    background-clip: padding-box;
    -webkit-border-radius: 5rpx;
    -moz-border-radius: 5rpx;
    border-radius: 5rpx;
    min-height: 28rpx;
  }
  
::-webkit-scrollbar-thumb:hover {
    background-color: #c6a04d;
    -webkit-border-radius: 5rpx;
    -moz-border-radius: 5rpx;
    border-radius: 5rpx;
  }

